<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_wall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="ApplicationWall Ad"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="imageAlertView With integral Ad"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_image1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="imageAlertView Without integral Ad"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_simple"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="SimpieinsertView Ad"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_baner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="BannerView Ad"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_video"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="FullSrennVideoView Ad"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_smallvideo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="AlertVideoView Ad"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_insert"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="InsertView In cell Ad"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/addpoint"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Increase point" />

            <Button
                android:id="@+id/reducepoint"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Reduce point" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>